<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_button"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Number Of Rooms"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bathroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rooms"
        android:gravity="center"
        android:text="Number Of Bathrooms"
        android:textSize="20dp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/flooring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bathroom"
            android:gravity="center"
            android:text="Type of Flooring"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flooring"
            android:gravity="center"
            android:text="Number Of Storeys"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/story"
            android:gravity="center"
            android:text="Location"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:gravity="center"
            android:text="Contact Number"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact"
            android:gravity="center"
            android:text="Price"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/price" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="EDIT" />

            <Button
                android:id="@+id/Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="DELETE" />


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>